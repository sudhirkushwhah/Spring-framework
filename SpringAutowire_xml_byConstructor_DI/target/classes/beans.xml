<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <!--in case of constructor requre index-->
    <bean class="com.spring.beans.Car" id="carId" autowire="constructor">
    <constructor-arg value="Maruti Suzuki" index="0"></constructor-arg>
    <constructor-arg value="Noida" index="1"></constructor-arg>
    <constructor-arg value="45" index="2"></constructor-arg>
   
    </bean>
    
    <bean class="com.spring.beans.Entity" id="entId">
    <constructor-arg value="6"></constructor-arg>
    <constructor-arg value="4"></constructor-arg>
    <constructor-arg value="6"></constructor-arg>
    </bean>

</beans>